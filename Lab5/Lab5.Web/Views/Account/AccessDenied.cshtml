@{
    ViewData["Title"] = "Доступ заборонено";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="text-danger">403</h1>
                    <h2 class="text-danger">Доступ заборонено</h2>
                    <p class="lead">У вас немає прав для доступу до цієї сторінки.</p>
                    <hr />
                    <div>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">На головну</a>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-success">Увійти</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>