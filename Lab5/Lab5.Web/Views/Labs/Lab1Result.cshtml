@model (System.Numerics.BigInteger maxSetSize, long maxSetCount)
@{
    ViewData["Title"] = "Результат - Лабораторна робота 1";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Результати розрахунку</h5>
            
            <div class="alert alert-success mt-3">
                <p><strong>Кількість рядків у максимальному наборі:</strong> @Model.maxSetSize</p>
                <p><strong>Кількість таких наборів:</strong> @Model.maxSetCount</p>
            </div>

            <div class="mt-3">
                <a asp-action="Lab1" class="btn btn-primary">Новий розрахунок</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">На головну</a>
            </div>
        </div>
    </div>
</div>