    ViewData["Title"] = "Результат - Лабораторна робота 2";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Результати розрахунку траєкторії</h5>
            
